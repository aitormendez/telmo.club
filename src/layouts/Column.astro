---
import "../styles/global.css";
import "../styles/fonts.css";

interface Props {
  title?: string;
}

const { title = "telmo" } = Astro.props as Props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="bg-white text-black antialiased text-xl">
    <div class="min-h-screen flex justify-center">
      <main class="w-full max-w-3xl px-5 sm:px-6 md:px-8 lg:px-10 py-10">
        <slot />
      </main>
    </div>
  </body>
</html>
