---
import "leaflet/dist/leaflet.css";
import leafletScript from "../scripts/leaflet-map.ts?url";

interface Marker {
  lat: number;
  lng: number;
  title?: string;
  slug?: string;
}

interface Props {
  lat?: number | null;
  lng?: number | null;
  title?: string;
  address?: string;
  zoom?: number;
  markers?: Marker[];
  height?: string;
  full?: boolean;
}

const {
  lat,
  lng,
  title = "Localización",
  address,
  zoom = 14,
  markers,
  height,
  full = false,
} = Astro.props as Props;

const hasCoords =
  typeof lat === "number" &&
  typeof lng === "number" &&
  !Number.isNaN(lat) &&
  !Number.isNaN(lng);

const hasMarkers = Array.isArray(markers) && markers.length > 0;
const markersJson = hasMarkers ? JSON.stringify(markers) : undefined;
---

{
  hasCoords || hasMarkers ? (
    <>
      <div
        class={`leaflet-map ${full ? "map-full" : ""}`}
        data-lat={hasCoords ? lat : undefined}
        data-lng={hasCoords ? lng : undefined}
        data-title={title}
        data-address={address}
        data-zoom={zoom}
        data-markers={markersJson}
        style={height ? `height:${height};` : undefined}
      />
      <script type="module" src={leafletScript}></script>
    </>
  ) : (
    <div class="leaflet-map map-fallback">Sin mapa</div>
  )
}

<style>
  .leaflet-map {
    position: relative;
    z-index: 0;
    width: 100%;
    background: #f7f7f7;
    border: 1px solid #e5e5e5;
  }

  /* Mapas estándar (entradas) */
  .leaflet-map:not(.map-full) {
    height: 360px;
    min-height: 360px;
  }

  @media (min-width: 640px) {
    .leaflet-map:not(.map-full) {
      height: 50vw;
      max-height: 520px;
    }
  }

  /* Mapas a pantalla completa dentro del layout (página /mapa) */
  .leaflet-map.map-full {
    height: 100%;
    min-height: 100%;
  }

  /* Espacio para los controles cuando hay header superpuesto */
  .leaflet-map.map-full :global(.leaflet-top.leaflet-right) {
    margin-top: 3.5rem;
  }

  .leaflet-map.is-fullscreen,
  :global(.leaflet-map:fullscreen) {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    z-index: 50;
    background: #fff;
  }

  :global(body.leaflet-fullscreen-open) {
    overflow: hidden;
  }

  .map-fallback {
    display: grid;
    place-items: center;
    color: #777;
    font-family: var(--font-sans, "dino", sans-serif);
  }

  :global(.pirate-pin .cross) {
    position: relative;
    display: block;
    width: 18px;
    height: 18px;
    margin: auto;
  }
  :global(.pirate-pin .cross::before),
  :global(.pirate-pin .cross::after) {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 18px;
    height: 2px;
    background: #111;
    transform-origin: center;
  }
  :global(.pirate-pin .cross::before) {
    transform: translate(-50%, -50%) rotate(45deg);
  }
  :global(.pirate-pin .cross::after) {
    transform: translate(-50%, -50%) rotate(-45deg);
  }

  :global(.leaflet-fullscreen-btn) {
    width: 30px;
    height: 30px;
    line-height: 1;
    background: #fff;
    border: none;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    padding: 0;
  }
  :global(.leaflet-fullscreen-btn:hover) {
    background: #f4f4f4;
  }
</style>
